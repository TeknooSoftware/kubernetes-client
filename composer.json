{
	"name": "teknoo/kubernetes-client",
	"type": "library",
	"description": "A simple yet elegant client for accessing and controlling a Kubernetes cluster.",
	"keywords": ["kubernetes", "docker", "container", "cluster"],
	"homepage": "https://teknoo.software/libraries/kubernetes-client",
	"license": "MIT",
	"authors": [
		{
			"name": "Richard DÃ©loge",
			"email": "richard@teknoo.software",
			"role": "Software architect, Lead developer"
		},
		{
			"name"    : "Marc Lough",
			"homepage": "http://maclof.com"
		}
	],
	"support": {
		"issues": "https://github.com/TeknooSoftware/kubernetes-client/issues",
		"source": "https://github.com/TeknooSoftware/kubernetes-client"
	},
	"funding": [
		{
			"type": "patreon",
			"url": "https://www.patreon.com/teknoo_software"
		},
		{
			"type": "github",
			"url": "https://github.com/sponsors/TeknooSoftware"
		}
	],
	"require": {
		"php": "^8.2",
		"ext-json": "*",
		"psr/http-message": "^1.0.1||^2",
		"php-http/client-common": "^2.7.2",
		"php-http/discovery": "^1.20",
		"symfony/yaml": "^6.4||^7.2",
		"illuminate/contracts": "^11.41.3",
		"illuminate/collections": "^11.41.3"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"phpunit/phpunit": "^12",
		"squizlabs/php_codesniffer": "^3.11.3",
		"symfony/console": "^6.4||^7.2",
		"symfony/options-resolver": "^6.4||^7.2",
		"phpstan/phpstan": "^1.12.16",
		"symfony/property-access": "^6.4||^7.2",
		"behat/behat": "^v3.18.1",
		"php-http/socket-client": "^2.3",
		"php-http/curl-client": "^2.3.3",
		"php-http/guzzle7-adapter": "^1.1",
		"symfony/http-client": "^6.4||^7.2",
		"nyholm/psr7": "^1.8.2"
	},
	"autoload": {
		"psr-4": {
			"Teknoo\\Kubernetes\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Teknoo\\Tests\\Kubernetes\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"audit": {
			"abandoned": "report"
		},
		"allow-plugins": {
			"php-http/discovery": true
		}
	}
}
