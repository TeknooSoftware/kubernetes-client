{
	"name": "teknoo/kubernetes-client",
	"type": "library",
	"description": "A simple yet elegant client for accessing and controlling a Kubernetes cluster.",
	"keywords": ["kubernetes", "docker", "container", "cluster"],
	"homepage": "https://teknoo.software/libraries/kubernetes-client",
	"license": ["BSD-3-Clause"],
	"authors": [
		{
			"name": "Richard DÃ©loge",
			"email": "richard@teknoo.software",
			"role": "Software architect, Lead developer"
		},
		{
			"name"    : "Marc Lough",
			"homepage": "http://maclof.com"
		}
	],
	"support": {
		"issues": "https://github.com/TeknooSoftware/kubernetes-client/issues",
		"source": "https://github.com/TeknooSoftware/kubernetes-client"
	},
	"funding": [
		{
			"type": "patreon",
			"url": "https://www.patreon.com/teknoo_software"
		},
		{
			"type": "github",
			"url": "https://github.com/sponsors/TeknooSoftware"
		}
	],
	"require": {
		"php": "^8.4",
		"ext-json": "*",
		"psr/http-message": "^2",
		"php-http/client-common": "^2.7.3",
		"php-http/discovery": "^1.20",
		"symfony/yaml": "^6.4.24||^7.4||^8",
		"illuminate/contracts": "^12.50",
		"illuminate/collections": "^12.50"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"phpunit/phpunit": "^13",
		"squizlabs/php_codesniffer": "^4.0.1",
		"symfony/console": "^6.4||^7.4||^8",
		"symfony/options-resolver": "^6.4||^7.4||^8",
		"phpstan/phpstan": "^2.1.38",
		"symfony/property-access": "^6.4||^7.4||^8",
		"behat/behat": "^v3.29",
		"php-http/socket-client": "^2.4",
		"php-http/curl-client": "^2.4",
		"php-http/guzzle7-adapter": "^1.1",
		"php-http/httplug": "^2.4.1",
		"psr/http-factory": "^1.1",
		"guzzlehttp/guzzle": "^7.10",
		"guzzlehttp/promises": "^2.3",
		"guzzlehttp/psr7": "^2.8",
		"symfony/http-client": "^6.4.24||^7.4||^8",
		"nyholm/psr7": "^1.8.2"
	},
	"autoload": {
		"psr-4": {
			"Teknoo\\Kubernetes\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Teknoo\\Tests\\Kubernetes\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"audit": {
			"abandoned": "report"
		},
		"allow-plugins": {
			"php-http/discovery": true
		}
	}
}
